<div class="card product-card h-100 text-left" id="{{index}}">
  <div class="card-body d-flex flex-column justify-content-between">
    <div>
      <h3 class="h4 text-primary text-header">{{ product.title | trans}}</h3>
      <p class="h5 text-primary d-flex price align-items-center">
        <span class="price-from mt-2">{{ product.price.pre | trans}}</span>
        <span class="price-num mx-2 text-header">{{ product.price.quantity | trans}}</span>
        <span class="d-inline-block mt-3">
          <span class="euro-symbol"> {{ product.price.currency | trans}}</span>{{ product.price.period | trans}}
        </span>
      </p>
      {% include 'components/simple-divider-line/simple-divider-line.html.twig' with {margin_y: 3, padding_x: 0} %}
      {% include 'components/bullet-list/bullet-list.html.twig' with { bullet_list_items: product.bullets } %}
    </div>
    <div class="d-flex flex-column">
      <button type="button" class=" btn btn-primary btn-lg btn-block mt-4 font-weight-bold" 
        data-toggle="modal" data-target="#click-to-call-popup">
        {{ product.cta.text | trans}}
      </button>
      {% if product.more_info.text != '' %}
        <a class="more-info" data-title="{{product.title}}" data-parent="{{parent}}" data-index="{{index}}"
          {{ custom_routes(product.more_info.path) }}>
          <p class="text-center py-4 font-weight-bold h5">{{ product.more_info.text | trans}}</p>
        </a>
      {% endif %}
    </div>
  </div>
</div>