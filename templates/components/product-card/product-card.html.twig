<div class="card product-card h-100 text-left">
  <div class="card-body d-flex flex-column justify-content-between">
  <div>
    <h2 class="h1 text-primary text-header">{{ item.title | trans}}</h2>
    <p class="h5 text-primary d-flex price align-items-center">
      <span class="price-from mt-2">{{ item.price.pre | trans}}</span>
      <span class="price-num mx-2 text-header">{{ item.price.quantity | trans}}</span>
      <span class="d-inline-block mt-3">
        <span class="euro-symbol"> {{ item.price.currency | trans}}</span>{{ item.price.period | trans}}
      </span>
    </p>
    {% include 'components/simple-divider-line/simple-divider-line.html.twig' with {margin_y: 3, padding_x: 0} %}
    {% include 'components/bullet-list/bullet-list.html.twig' with { bullet_list_items: item.bullets } %}
  </div>
  <div class="d-flex flex-column">
    <button type="button" class=" btn btn-primary btn-lg btn-block mt-4 font-weight-bold" data-toggle="modal" data-target="#click-to-call-popup">{{ item.cta.text | trans}}</button>
    {# <a href="{{ item.more_info.path | trans }}"><p class="text-center py-4 font-weight-bold h5">{{ item.more_info.text | trans}}</p></a> #}
    <a {{ custom_routes(item.more_info.path) }}><p class="text-center py-4 font-weight-bold h5">{{ item.more_info.text | trans}}</p></a>
  </div>
  </div>
</div>