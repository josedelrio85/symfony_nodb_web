<div class="card product-single-card mx-4">
  <div class="card-body d-flex flex-column justify-content-between p-0">
    <div class="card-body-top-part">
      <p class="h5 text-primary d-flex justify-content-center price">
        <span class="h6 price-from mt-2">{{ price_pre }}</span>
        <span class="price-num mx-2 text-header">{{ price_quantity}}</span>
        <span class="h6 euro-symbol mt-3"> {{ price_currency }}</span><span class="h6 period mt-3">{{ price_period }}</span>
      </p>
    </div>
    <div class="p-4">
      <ul class="list-group list-group-flush bullet-list">
        {% for item in price_bullets %}
          {% if item.text != '' %}
            <li class="list-group-item px-0">
              <span class="list-item-header h4 text-primary font-weight-bold">{{ item.text }}</span><br>
              <span class="list-item-decription text-dark">{{ item.subtext }}</span>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
      <button type="button" href="{{ cta_path }}"class="btn btn-primary btn-lg btn-block my-4 font-weight-bold">{{ cta_text }}</button>
    </div>
  </div>
</div>


