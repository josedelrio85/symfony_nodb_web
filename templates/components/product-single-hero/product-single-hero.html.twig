<div id="product-single-hero">
  {# Hero section mobile #}
  <div class="d-block d-lg-none mb-4">
    <div class="container-fluid product-single-hero-mobile p-0" 
    {# style="background-image: url('https://via.placeholder.com/2000x500');"> #}
    style="background-image:url({{ asset('build/images/'~ "#{image}") }})">
      <div class="container pt-5">
        <div class="row">
          <div class="col-12 p-0 text-white mt-3">

            {% include 'components/header-page-title/header-page-title.html.twig' with {
              mini_header: '' | trans,
              text_header: "#{product}.hero.title" | trans,
              content_header: "#{product}.hero.subtitle" | trans,
            } %}
            {% include 'components/product-single-card/product-single-card.html.twig' with {
              price_pre: "#{product}.price_with_details.price.pre" | trans | raw,
              price_quantity: "#{product}.price_with_details.price.quantity" | trans | raw,
              price_currency: "#{product}.price_with_details.price.currency" | trans | raw,
              price_period: "#{product}.price_with_details.price.period" | trans | raw,
              price_bullets: price_bullets,
              cta_text: "#{product}.price_with_details.cta.text" | trans | raw,
              cta_path: "#{product}.price_with_details.cta.path" | trans | raw
            } %}

          </div>
        </div>
      </div>
    </div>
  </div>

  {# Hero section desktop #}
  <div class="container-fluid px-0 py-2 d-none d-lg-block mb-4 product-single-hero-desktop" 
   style="background-image:url({{ asset('build/images/'~ "#{image}") }})">
      <div class="container px-0 d-flex h-100">
      <div class="row align-self-center">
        <div class="col-lg-7 col-xl-8 text-white">
          <div id="triggerpincard"></div>
            {% include 'components/header-page-title/header-page-title.html.twig' with {
                mini_header: '' | trans,
                text_header: "#{product}.hero.title" | trans,
                content_header: "#{product}.hero.subtitle" | trans,
            } %}
        </div>
      </div>
    </div>
  </div>
</div>