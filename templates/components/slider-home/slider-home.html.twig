<!-- Slider main container -->
<div class="swiper-home swiper-container fade-in">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    {% for slide in slides %}
    <div class="swiper-slide">
      <a class="slider-link"
       {% if slide.cta.path != '' %} {{ custom_routes(slide.cta.path | trans) }} {% endif %}>
        <div class="container h-100" id="{{slide.cta.id}}" 
        {% if slide.cta.action != '' %} data-action="{{slide.cta.action}}" {% endif %}
        {% if slide.cta.position != '' %} data-position="{{ slide.cta.position }}" {% endif %}>
          <div class="inner">
          </div>
        </div>
        <picture class="w-100">
            <source srcset="{{ asset('build/images/'~ "#{slide.image_mobile}") }}" media="(max-width: 576px)">
            <source srcset="{{ asset('build/images/'~ "#{slide.image_tablet}") }}" media="(max-width: 767px)">
            <source srcset="{{ asset('build/images/'~ "#{slide.image_desktopmini}") }}" media="(max-width: 1440px)">
            <source srcset="{{ asset('build/images/'~ "#{slide.image}") }}">
            <img class="w-100" srcset="{{ asset('build/images/'~ "#{slide.image}") }}">
        </picture>
      </a>
    </div>


    {% endfor %}
  </div>

  <!-- Bullets -->
  <div class="swiper-pagination"></div>

  <!-- Arrows -->
  <div class="container container-next-prev h-100 p-0">
    <div class="container-next-prev-inner">
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>   
  </div>   

</div>