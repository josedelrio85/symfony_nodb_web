            <div class="form-group text-left">
                <input type="phone" class="form-control" id="phone" aria-describedby="phoneHelp" placeholder="Tu teléfono">
            </div>
            <div class="form-check text-left d-flex">
                <input type="checkbox" class="form-check-input" id="legalCheck">
