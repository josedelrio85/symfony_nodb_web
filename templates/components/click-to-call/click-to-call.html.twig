<div class="click-to-call-btn bg-primary p-3 d-none d-md-block">
  <div class="text-center">
    <span class="h4 icon icon-phone text-light d-block"></span>
    <span class="h6 text-light m-0">¿Hablamos?</span>
  </div>
</div>

<div class="click-to-call click-to-call-desktop d-none d-md-block">
  <div class="click-to-call--header d-flex align-items-center justify-content-between align-items-center bg-primary px-3 py-2">
    <div class="d-flex align-items-center">
      <div class="icon-phone-container">
        <span class="h5 icon icon-phone mr-3 text-primary"></span>
      </div>
      <span class="h6 text-light m-0">{{ "form.header" | trans | raw }}</span>
    </div>
    <div class="close-c2c">
      <span class="icon icon-cancel-circle text-white"></span>
    </div>
  </div>
  <div class="click-to-call--body c2cdesktop text-center px-3 py-4">
    <img class="img-call mx-auto mb-3" srcset="{{ asset('build/images/adeslas_simple_logo_blue.svg') }}">
    <h4 class="text-header">{{ "form.title" | trans | raw }}</h4>
    <p>{{ "form.desc" | trans | raw }}</p>
    <form>
      <div class="form-group text-left label-in-block">
        <label for="phone">Tu teléfono</label>
        <input type="phone" class="form-control" id="phone" maxlength="9" aria-describedby="phoneHelp" placeholder="{{ "form.fields.phone" | trans | raw }}">
      </div>

      <p class="call-me-now-validation-error d-none"></p>

      <div class="form-check text-left d-flex">
        <input type="checkbox" class="form-check-input" id="legalCheck">
        <label class="form-check-label small" for="legalCheck">{{ "form.fields.privacy" | trans | raw }}</label>
      </div>
      <button type="submit" class="btn btn-primary mt-4 btn-block call-me-now">{{ "form.cta.text" | trans | raw }}</button>
    </form>
  </div>
</div>

