{# {{dump(bullets_extra)}} #}
<div class="container-fluid container-lg p-0">
  <div class="row">
    <div class="col-12">
      {% set desc = null %}
      {% if bullets_extra.desc is defined %}
        {%  set desc = bullets_extra.desc %}
      {% endif %}
      {% if bullets_extra.text is defined %}
        {%  set desc = bullets_extra.text %}
      {% endif %}

      {% if bullets_extra.title is defined %}
        {% include 'components/header-titles/header-titles.html.twig' with {
          mini_header: bullets_extra.suptitle,
          text_header: bullets_extra.title,
          heading_small: false,
          content_header: desc
        } %}
      {% endif %}

      {% if bullets_extra.list is defined and bullets_extra.list is not empty %}
        <div class="container mb-5">
          <div class="row">
              <div class="container-fluid p-0">
                <div class="container p-0">
                  <div class="row">
                    <div class="col-12 py-2">
                      {% include 'components/bullet-list/bullet-list.html.twig' with {
                        bullet_list_items: bullets_extra.list
                      } %}
                    </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>