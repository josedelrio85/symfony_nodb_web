{% extends 'base.html.twig' %}

{% block title %}{{ "home.title_detail" | trans }}{% endblock %}

{% block meta_description %}<meta name="description" content="{{ "home.meta_description" | trans }}">{% endblock %}

{% block body %}

  <div class="container-fluid p-0 fade-in">
    {% include 'components/slider-home/slider-home.html.twig' with {
      slides: hero,
    } %}
  </div>

  <div class="container-fluid p-5 fade-in">
    <div class="container">
      {% include 'components/configurator/configurator.html.twig' with {} %}
    </div>
  </div>

  <div class="container-fluid fade-in">
      {% include 'components/simple-divider-line/simple-divider-line.html.twig' with {margin_y: 3, padding_x: 0} %}
  </div>

  <div class="container-fluid py-5 feature-cards-container mb-n5 fade-in" style="background-image: url({{ asset('build/images/adeslas_back_services_home.jpg') }})">
      {% include 'components/feature-cards/feature-cards.html.twig' with {
        cards: cards,
      } %}
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('configurator') }}
{% endblock %}