        {# Dropdown content #}
        {% include 'components/dropdown/dropdown.html.twig' with {
          bg_grey: false,
          dropdown_items: des_with_dropdown_list.drop,
        } %}

        {# Header titles #}
        {% include 'components/header-titles/header-titles.html.twig' with {
            mini_header: desc_with_bullets_list.suptitle,
