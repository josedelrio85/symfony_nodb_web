        {% include 'components/header-titles/header-titles.html.twig' with {
          bg_grey: true,
          mini_header: faq.suptitle,
          text_header: faq.title,
          content_header: '',
        } %}

        {# Dropdown content #}
        {% include 'components/dropdown/dropdown.html.twig' with {
          bg_grey: true,
          dropdown_items: faq.elems,
        } %}

        {% if table is defined %}
        <div class="container-fluid">
          <div class="container">
            {% include 'components/product-features-table/product-features-table.html.twig' with {
              array: null,
